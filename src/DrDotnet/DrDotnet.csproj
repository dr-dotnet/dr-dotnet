<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
	<!--<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <PlatformTarget>x64</PlatformTarget>-->
	<OutputPath>..\..\bin\$(Configuration)\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="6.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebView" Version="6.0.0" />
    <PackageReference Include="Microsoft.Diagnostics.NETCore.Client" Version="0.2.257301" />
  </ItemGroup>
  
  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(Configuration)'=='DEBUG'">
    <Exec Command="cargo build --manifest-path=&quot;..\DrDotnetProfiler\Cargo.toml&quot; --target-dir=&quot;..\..\bin&quot;" />
  </Target>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(Configuration)'=='RELEASE'">
    <Exec Command="cargo build --release --manifest-path=&quot;..\DrDotnetProfiler\Cargo.toml&quot; --target-dir=&quot;..\..\bin&quot;" />
  </Target>

  <ItemGroup>
    <Content Include="..\DrDotnetProfiler\**" Link="Profiler\%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>

</Project>
