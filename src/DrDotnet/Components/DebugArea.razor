@using DrDotnet.Utils
@namespace DrDotnet

<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel Text="App Logs">
        <LogsArea FileWatcher="AppLogWatcher" />
    </MudTabPanel>
    <MudTabPanel Text="Profiler Logs">
        <LogsArea FileWatcher="ProfilerLogWatcher" />
    </MudTabPanel>
</MudTabs>

@code {

    [Inject(Key = "app.log")]
    public FileContentWatcher? AppLogWatcher { get; set; }
    
    [Inject(Key = "profiler.log")]
    public FileContentWatcher? ProfilerLogWatcher { get; set; }
}